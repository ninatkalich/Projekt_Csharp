        <TextBox x:Name="odp2" HorizontalAlignment="Left" Height="28" Margin="181,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="89"/>
        <TextBlock  HorizontalAlignment="Left" Height="28" Margin="31,124,0,0" TextWrapping="Wrap" Text="Płeć" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="dodaj_Button" Content="Dodaj" HorizontalAlignment="Center" Height="68" Margin="0,191,0,0" VerticalAlignment="Top" Width="110" Click="dodaj_Button_Click"/>
        <ComboBox x:Name="plec_combo" HorizontalAlignment="Left" Height="28" Margin="181,124,0,0"  VerticalAlignment="Top" Width="89">

            <ComboBox.Items>
                <ComboBoxItem>Kobieta</ComboBoxItem>
                <ComboBoxItem>Mężczyzna</ComboBoxItem>
                
            </ComboBox.Items>

        </ComboBox>
    </Grid>
</Window>
